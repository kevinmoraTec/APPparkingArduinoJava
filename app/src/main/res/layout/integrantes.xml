<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#3D52C6"
        android:padding="20dp"
        android:elevation="4dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_parke"
            android:layout_gravity="center"/>

        <TextView
            android:paddingStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="center_vertical"
            android:textColor="#FFF"
            android:fontFamily="@font/flixnormal"
            android:text="Desarrolladores"
            android:textSize="28sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:fontFamily="@font/messiri"
                android:text="Kevin Mora"
                android:textSize="20sp"
                android:hint="Programador"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:fontFamily="@font/messiri"
                android:text="Jonathan Calderón"
                android:textSize="20sp"
                android:hint="Diseñador"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:fontFamily="@font/messiri"
                android:text="Pablo Abrigo"
                android:textSize="20sp"
                android:hint="Publicista"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:fontFamily="@font/messiri"
                android:text="Brayan Chamico"
                android:textSize="20sp"
                android:hint="Programador X2"/>
        </LinearLayout>

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/logoprogra"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:background="#3D52C6"
        android:elevation="4dp"
        android:gravity="center"
        android:padding="10dp">

        <com.google.android.material.button.MaterialButton

            android:id="@+id/cerrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/flixnormal"
            android:text="Aceptar"
            android:textColor="#818181"
            app:icon="@drawable/ic_marca_de_verificacion"
            app:iconTint="#818181" />
    </LinearLayout>


</LinearLayout>